<div class="container">
  <div class="row py-4">
    <div class="col-md-3"></div>
    <div class="col">
      <h1>Checkout summary</h1>
      <%= @purchase.orders.each do |order| %>
      <p>Purchase of <strong><%= order.id %></strong> for <strong><%= humanized_money_with_symbol @purchase.total_price %></strong></p>
      <% end %>
      <button id="pay" class="btn btn-primary">Pay</button>
      <!-- # Commented for the lecture, remove comments. -->
      <script src="https://js.stripe.com/v3/"></script>
      <script>
        const paymentButton = document.getElementById('pay');
        paymentButton.addEventListener('click', () => {
          const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
          stripe.redirectToCheckout({
            sessionId: '<%= @purchase.checkout_session_id %>'
          });
        });
      </script>
    </div>
  </div>
</div>
