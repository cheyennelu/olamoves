<div class="review-portion">
  <h1>Reviews
  <%= link_to "Add a Review", new_video_review_path(video), class: 'btn btn-success' %>
  </h1>
  <% @video.reviews.each do |review| %>
    <div class="review-container">
      <div class="review-card">
        <div class="review-top-portion d-flex justify-content-between">
          <div class="img-and-name d-flex">
            <img src="https://images.unsplash.com/photo-1586083702768-190ae093d34d?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=995&q=80" alt="man">
            <h2> <%= review.user.name %></h2>
          </div>
          <div class="rating-stars d-flex pt-2">
          <% review.rating.times do  %>
              <i class="fas fa-star text-warning"></i>
          <% end %>
          </div>
        </div>
        <div class="comment-box">
          <p> <%= review.comment %> </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
